upstream gogs {
  server <%= @backend_host %>:<%= @backend_port %>;
}

server {
  <% if @with_ipv6 %>
  listen [::]:80;
  <% end %>
  listen 80;
  server_name <%= @server_name %>;

  location / {
    return 301 https://$server_name$request_uri;
  }
}

server {
  <% if @with_ipv6 %>
  listen [::]:443 ssl http2;
  <% end %>
  listen 443 ssl http2;
  server_name <%= @server_name %>;

  <% if @scts %>
  ssl_ct on;
  <% end %>

  ssl_certificate <%= @ssl_rsa_certificate %>;
  ssl_certificate_key <%= @ssl_rsa_certificate_key %>;
  <% if @scts %>
  ssl_ct_static_scts <%= @scts_rsa_directory %>;
  <% end %>

  <% if !@ssl_ec_certificate.nil? && !@ssl_ec_certificate_key.nil? && !@scts_ec_directory.nil? %>
  ssl_certificate <%= @ssl_ec_certificate %>;
  ssl_certificate_key <%= @ssl_ec_certificate_key %>;
  <% if @scts %>
  ssl_ct_static_scts <%= @scts_ec_directory %>;
  <% end %>
  <% end %>

  add_header Strict-Transport-Security "max-age=<%= @hsts_max_age %>" always;
  add_header X-Frame-Options DENY;
  add_header Content-Security-Policy "default-src 'none'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' https://secure.gravatar.com; font-src 'self' data:;";

  <% if @oscp_stapling %>
  ssl_stapling on;
  ssl_stapling_verify on;
  resolver 8.8.8.8 8.8.4.4 valid=300s;
  resolver_timeout 5s;
  <% end %>

  <% if @hpkp && @hpkp_pins.size > 0 %>
  add_header Public-Key-Pins '<%= @hpkp_pins.map{ |pin| "pin-sha256=\"#{pin}\"" }.join '; ' %>; max-age=<%= @hpkp_max_age %>;' always;
  <% end %>

  charset utf-8;
  access_log <%= @access_log %> combined;
  error_log <%= @error_log %> error;

  proxy_set_header Host $http_host;
  proxy_set_header X-Forwarded-Proto $scheme;
  proxy_set_header X-Forwarded-For $remote_addr;
  proxy_redirect off;

  proxy_read_timeout 30s;
  proxy_send_timeout 30s;
  send_timeout 60s;
  client_body_timeout 60s;

  client_max_body_size 100m;
  client_body_buffer_size 4m;

  location / {
    proxy_pass http://gogs/;
  }
}
